<!--pages/analysis/petcage/petcage/petcage.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">宠笼管理</view>
</cu-custom>
<scroll-view scroll-y="{{modalName==null}}" class="page {{modalName!=null?'show':''}}">

  <view class="cu-form-group">
    <image class="pipilong" src="../../../images/pipilong.jpg"></image>
  </view>
  <view class="margin-top">
    <view class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}}">
      <view class="cu-item {{menuArrow?'arrow':''}}">
        <view class="content">
          <text class="cuIcon-people text-grey"></text>
          <text class="text-grey" bindtap="repair">宠笼报修</text>
        </view>
      </view>
      <view class="cu-item {{menuArrow?'arrow':''}}">
        <view class="content">
          <text class="cuIcon-emoji text-grey"></text>
          <text class="text-grey" bindtap='manage'>宠笼维护</text>
        </view>
      </view>
      <view class="cu-item {{menuArrow?'arrow':''}}">
        <view class="content">
          <text class="cuIcon-service text-grey"></text>
          <text class="text-grey" bindtap='purchase'>宠笼采购</text>
        </view>
      </view>
      <view class="cu-item {{menuArrow?'arrow':''}}">
        <view class="content">
          <text class="cuIcon-writefill text-grey"></text>
          <text class="text-grey" bindtap='upgrade'>宠笼升级</text>
        </view>
      </view>
      <view class="cu-item {{menuArrow?'arrow':''}}">
        <view class="content">
          <text class="cuIcon-right text-grey"></text>
          <text class="text-grey" bindtap='service'>服务方式</text>
        </view>
      </view>
      
    </view>
  </view>
</scroll-view>