<!-- pages/login/login.wxml -->
<cu-custom bgColor="bg-gradual-blue" isBack="{{false}}">
  <!-- <view slot="backText">返回</view> -->
  <view slot="content">登录</view>
</cu-custom>

<form bindsubmit="submit">
  <view class="cu-form-group">
    <image class="pipilong" src="../../images/pipilong.jpg"></image>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">手机号</view>
    <input placeholder="商家手机号" name='phone'></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">密码</view>
    <input placeholder="请输入密码" password name='pwd'></input>
  </view>
  <view class="cu-form-group">
    <button class="btnSubmit" form-type="submit">登 录</button>
  </view>
</form>