/* pages/warn/index.wxss */

.container {
  width: 100%;
  height: 120vh;
  /* background-color: #f2f2f2; */
  background: linear-gradient(#6cf, #080);
  display: flex;
  justify-content: flex-start;
}

.title1 {
  /* background-color: #f2f2f2; */
  background-color: inherit;
  /* padding: 30rpx 0 30rpx 50rpx; */
  font-size: 28rpx;
  margin-left: 30px;
}

.title2 {
  margin-top: 20px;
  background-color: inherit;
  font-size: 28rpx;
}

.choose {
  margin-top: -60px;
  /* background-color: #fff; */
  background-color: inherit;
  border-bottom: 1px solid #ccc;
}

.choose-grids {
  padding: 50rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.grids {
  width: 45%;
  height: 100rpx;
  margin-top: 36rpx;
  border: 1px solid #b9dd08;
  text-align: center;
  line-height: 100rpx;
  border-radius: 8rpx;
}

.grids:first-child, .grids:nth-of-type(2) {
  margin-top: 0;
}

.action .action-photo {
  margin-top: 30rpx;
  padding: 40rpx 0 40rpx 50rpx;
  /* background-color: #fff; */
  background-color: inherit;
  border: 1px solid #b9dd08;
  border-radius: 8rpx;
}

.action .action-photo image {
  width: 120rpx;
  height: 120rpx;
  margin-left: 25rpx;
  position: relative;
  overflow: visible;
  vertical-align: top;
}

.action .action-photo image icon {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}

.action .action-photo .add {
  display: inline-block;
  height: 120rpx;
  width: 120rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  border: 2rpx dotted #ccc;
  color: #ccc;
  text-align: center;
  line-height: 120rpx;
}

.action .action-input {
  margin-top: 30rpx;
  /* padding-left: 60rpx; */
  padding: center;
  /* background-color: #fff; */
  background-color: inherit;
}

.action .action-input input {
  padding-top: 40rpx;
  padding-bottom: -100rpx;
  width: 100%;
  color: rgba(10, 10, 10, 0.76);
}

.action .action-input input:first-child {
  border-bottom: 1px solid #ccc;
}

.action .action-input input:last-child {
  border-bottom: 1px solid #ccc;
}

.action-input .placeholder-input {
  color: rgba(10, 10, 10, 0.308);
}

.action .action-submit button {
  /* margin: 40rpx 80rpx 40rpx 40rpx; */
  margin-top: 50px;
  width: 100%;
  background-color: #f2f2f2;
  padding: center;
}
